<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/discoveryFragment">

    <fragment
        android:id="@+id/discoveryFragment"
        android:name="az.sharif.bippyteam.view.fragment.DiscoveryFragment"
        android:label="fragment_discovery"
        tools:layout="@layout/fragment_discovery" >
        <argument
            android:name="image"
            app:argType="reference" />
        <action
            android:id="@+id/action_discoveryFragment_to_messageFragment"
            app:destination="@id/messageFragment" />
        <action
            android:id="@+id/action_discoveryFragment_to_newsFragment"
            app:destination="@id/newsFragment" />
        <action
            android:id="@+id/discoveryToService"
            app:destination="@id/servicePageFragment" />
        <action
            android:id="@+id/discoveryToCategory"
            app:destination="@id/categoryPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="az.sharif.bippyteam.view.fragment.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_newsFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="az.sharif.bippyteam.view.fragment.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="uuId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/servicePageFragment"
        android:name="az.sharif.bippyteam.view.fragment.ServicePageFragment"
        android:label="ServicePageFragment" >
        <argument
            android:name="service"
            app:argType="az.sharif.bippyteam.model.ServiceModel" />
    </fragment>
    <fragment
        android:id="@+id/categoryPageFragment"
        android:name="az.sharif.bippyteam.view.fragment.CategoryPageFragment"
        android:label="fragment_category_page"
        tools:layout="@layout/fragment_category_page" />
</navigation>